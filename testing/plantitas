<!DOCTYPE html>
<html>

<head>
    <title>Recordatorio de Riego</title>
    <style>
        #widget-container {
            width: 300px;
            padding: 20px;
            background-color: #f2f2f2;
            border-radius: 5px;
            text-align: center;
        }

        h2 {
            color: #333;
        }

        #datepicker {
            margin-bottom: 10px;
        }

        #set-reminder-btn {
            padding: 5px 10px;
        }

        #message {
            margin-top: 10px;
            font-weight: bold;
        }
    </style>
</head>

<body>
    <div id="widget-container">
        <h2>Recordatorio de Riego</h2>
        <input type="text" id="plant-name-input" placeholder="Nombre de la planta">
        <input type="date" id="datepicker">
        <button id="set-reminder-btn">Establecer recordatorio</button>
        <p id="message"></p>
    </div>

    <script>
        // Obtener elementos del DOM
        const plantNameInput = document.getElementById('plant-name-input');
        const datePicker = document.getElementById('datepicker');
        const setReminderButton = document.getElementById('set-reminder-btn');
        const messageElement = document.getElementById('message');

        // Escuchar el clic del botón "Establecer recordatorio"
        setReminderButton.addEventListener('click', () => {
            const plantName = plantNameInput.value;
            const selectedDate = datePicker.value;

            if (plantName && selectedDate) {
                // Guardar la información en el almacenamiento local
                localStorage.setItem('plantName', plantName);
                localStorage.setItem('selectedDate', selectedDate);

                // Mostrar un mensaje de éxito
                messageElement.innerText = 'Recordatorio establecido correctamente.';
            } else {
                // Mostrar un mensaje de error si no se proporcionan los datos requeridos
                messageElement.innerText = 'Por favor, completa todos los campos.';
            }
        });

        // Cargar el nombre de la planta y la fecha seleccionada si están almacenados en el almacenamiento local
        window.addEventListener('load', () => {
            const savedPlantName = localStorage.getItem('plantName');
            const savedSelectedDate = localStorage.getItem('selectedDate');

            if (savedPlantName && savedSelectedDate) {
                plantNameInput.value = savedPlantName;
                datePicker.value = savedSelectedDate;
            }
        });

    </script>
</body>

</html>
